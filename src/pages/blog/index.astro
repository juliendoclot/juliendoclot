---
export const prerender = true;

import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Extract all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))];
---

<Layout title={`Blog | ${SITE_TITLE}`} description="Tous mes articles de blog sur le développement web, la technologie et plus encore.">
	<div class="py-4">
		<!-- Tags Filter -->
		{allTags.length > 0 && (
			<section class="mb-8">
				<div id="tags-filter" class="flex flex-wrap gap-3">
					<span class="tag-pill active" data-tag="all">Tous</span>
					{allTags.map((tag) => (
						<span class="tag-pill" data-tag={tag}>{tag}</span>
					))}
				</div>
			</section>
		)}

		<!-- Posts Grid -->
		<section id="posts-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
			{posts.map((post) => (
				<div class="post-item" data-tags={JSON.stringify(post.data.tags || [])}>
					<BlogCard post={post} />
				</div>
			))}
		</section>

		<!-- Empty State -->
		{posts.length === 0 && (
			<div class="text-center py-12">
				<p class="text-gray-500 dark:text-gray-400">
					Aucun article pour le moment. Revenez bientôt !
				</p>
			</div>
		)}
	</div>
</Layout>

<script>
	const tagsFilter = document.getElementById('tags-filter');
	const postItems = document.querySelectorAll('.post-item');

	tagsFilter?.addEventListener('click', (e) => {
		const target = e.target as HTMLElement;
		if (!target.classList.contains('tag-pill')) return;

		// Update active state
		tagsFilter.querySelectorAll('.tag-pill').forEach(pill => pill.classList.remove('active'));
		target.classList.add('active');

		const selectedTag = target.dataset.tag;

		// Filter posts
		postItems.forEach(item => {
			const postTags = JSON.parse((item as HTMLElement).dataset.tags || '[]');
			if (selectedTag === 'all' || postTags.includes(selectedTag)) {
				(item as HTMLElement).style.display = '';
			} else {
				(item as HTMLElement).style.display = 'none';
			}
		});
	});
</script>
