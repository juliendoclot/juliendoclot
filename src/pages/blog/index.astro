---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Extract all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags))];
---

<Layout title={`Blog | ${SITE_TITLE}`} description="Tous mes articles de blog sur le développement web, la technologie et plus encore.">
	<!-- Hero Section -->
	<section class="hero-gradient -mx-4 sm:-mx-6 lg:-mx-8 px-4 sm:px-6 lg:px-8 py-16 md:py-20 rounded-2xl mb-12 relative z-10">
		<div class="relative z-10">
			<p class="text-indigo-400 font-medium mb-4">Blog</p>
			<h1 class="text-4xl md:text-5xl font-bold text-white mb-4 leading-tight">
				Tous les articles
			</h1>
			<p class="text-gray-400 text-lg max-w-2xl">
				Découvrez mes articles sur le développement web, la technologie et mes réflexions.
			</p>
		</div>
	</section>

	<div class="py-4">
		<!-- Tags Filter -->
		{allTags.length > 0 && (
			<section class="mb-8">
				<div class="flex flex-wrap gap-3">
					<span class="tag-pill active">Tous</span>
					{allTags.map((tag) => (
						<span class="tag-pill">{tag}</span>
					))}
				</div>
			</section>
		)}

		<!-- Posts Grid -->
		<section class="grid md:grid-cols-2 gap-6">
			{posts.map((post) => (
				<BlogCard post={post} />
			))}
		</section>

		<!-- Empty State -->
		{posts.length === 0 && (
			<div class="text-center py-12">
				<p class="text-gray-500 dark:text-gray-400">
					Aucun article pour le moment. Revenez bientôt !
				</p>
			</div>
		)}
	</div>
</Layout>
