---
import logoLight from '../assets/logo.webp';
import logoDark from '../assets/logo-dark.webp';

const today = new Date();
---

<footer class="border-t border-gray-200 dark:border-gray-800/50 bg-white dark:bg-[#0a0a1a] transition-colors duration-300">
	<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
		<div class="flex flex-col md:flex-row items-center justify-between gap-8">
			<!-- Brand -->
			<div class="flex flex-col items-center md:items-start gap-3">
				<a href="/" class="flex items-center no-underline">
					<img src={logoLight.src} alt="Julien Doclot" class="h-10 dark:hidden" />
					<img src={logoDark.src} alt="Julien Doclot" class="h-10 hidden dark:block" />
				</a>
				<p class="text-sm text-gray-500 dark:text-gray-400">
					&copy; {today.getFullYear()} Tous droits réservés.
				</p>
			</div>

			<!-- Links -->
			<div class="flex items-center gap-8 text-sm">
				<a href="/" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
					Accueil
				</a>
				<a href="/blog" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
					Blog
				</a>
				<a href="/contact" class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors no-underline">
					Contact
				</a>
			</div>

			<!-- Social Links -->
			<div class="flex items-center gap-4">
				<a
					href="/rss.xml"
					class="p-2.5 rounded-full border border-gray-200 dark:border-gray-700 text-gray-400 hover:text-orange-500 hover:border-orange-500/50 transition-all"
					aria-label="Flux RSS"
				>
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
						<path d="M6.18 15.64a2.18 2.18 0 0 1 2.18 2.18C8.36 19 7.38 20 6.18 20C5 20 4 19 4 17.82a2.18 2.18 0 0 1 2.18-2.18M4 4.44A15.56 15.56 0 0 1 19.56 20h-2.83A12.73 12.73 0 0 0 4 7.27V4.44m0 5.66a9.9 9.9 0 0 1 9.9 9.9h-2.83A7.07 7.07 0 0 0 4 12.93V10.1Z"/>
					</svg>
				</a>

				<a
					href="https://x.com/juliendoclot"
					target="_blank"
					rel="noopener noreferrer"
					class="p-2.5 rounded-full border border-gray-200 dark:border-gray-700 text-gray-400 hover:text-black hover:border-black dark:hover:text-white dark:hover:border-white transition-all"
					aria-label="X"
				>
					<svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
						<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
					</svg>
				</a>

				<a
